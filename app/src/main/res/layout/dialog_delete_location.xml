<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:backgroundTint="#80000000"
    tools:ignore="UnusedAttribute">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:backgroundTint="#3B3B3B"
        android:padding="8dp"
        android:background="@drawable/shape_border"
        android:layout_gravity="center"
        android:layout_margin="16dp">
        <TextView
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete address"
            android:textColor="#fff"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="18dp"
            android:layout_marginBottom="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/do_you_want_to_delete_this_address"
            android:textColor="#fff"
            android:textSize="15dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="8dp"
            >
            <TextView
                android:id="@+id/bt_cancel"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textColor="#fff"
                android:background="@drawable/shape_border_button"
                android:backgroundTint="#262626"
                android:gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/bt_delete"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/delete"
                android:textColor="#fff"
                android:background="@drawable/shape_border_button"
                android:backgroundTint="#FFA800"
                android:gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
