<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_info_daily"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:background="@drawable/shape_border"
    android:backgroundTint="#3B3B3B"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_12sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_or_date_daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:fontFamily="@font/montserrat_regular"
                android:text="15:00"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_wi_umbrella" />

                <TextView
                    android:id="@+id/percent_rain_down_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:text="82%"
                    android:textColor="@color/white"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_status_weather_daily"
                android:layout_width="@dimen/_36sdp"
                android:layout_height="@dimen/_36sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_sun_cloudy" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/term_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="28"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/term_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="28"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/overcast_throughout_the_day_daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_12sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/daily_weather_text"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_65sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="Overcast throughout\nthe day"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/icon_expand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_back" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/more_info_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#262626"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_12sdp"
                android:src="@drawable/ic_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/precipitation_daily"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/precipitation"
                        android:textColor="#A1A1A1"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/wind_chill_daily"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:text="@string/wind_chill"
                        android:textColor="#A1A1A1"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/cloud_cover_daily"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:text="@string/cloud_cover"
                        android:textColor="#A1A1A1"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/moon_phrase_daily"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:text="@string/moon_phrase"
                        android:textColor="#A1A1A1"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/wind_speed_daily"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:text="@string/wind_speed"
                        android:textColor="#A1A1A1"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ultraviolet_index_daily"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:text="@string/ultraviolet_index"
                        android:textColor="#A1A1A1"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/wind_dir_daily"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:text="@string/wind_dir"
                        android:textColor="#A1A1A1"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

