<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clear">


    <mtgtech.com.weather_forecast.view.weather_widget.verticalScrollView.VerticalSwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imgMenu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_right_menu_bars"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/locationContainer"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/locationContainer"
                app:tint="@color/white" />

            <LinearLayout
                android:id="@+id/locationContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvCityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextClock
                    android:id="@+id/tvCurrentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:format12Hour="EEE hh:mm a"
                    android:textColor="@color/white" />
            </LinearLayout>

            <ImageView
                android:id="@+id/addCity"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_add_location"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/locationContainer"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/locationContainer"
                app:tint="@color/white" />


            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/locationContainer">

                    <TextView
                        android:id="@+id/tvRecentRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.utils.widget.ImageFilterView
                            android:id="@+id/imgWeather"
                            android:layout_width="0dp"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_percent="0.6" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tvTempStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                app:layout_constraintBottom_toTopOf="@id/tvTemperature"
                                app:layout_constraintStart_toStartOf="@id/tvTemperature" />

                            <TextView
                                android:id="@+id/tvTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:textColor="@color/white"
                                android:textSize="80sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginStart="3dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/degree_ring"
                                app:layout_constraintStart_toEndOf="@id/tvTemperature"
                                app:layout_constraintTop_toTopOf="@id/tvTemperature" />

                            <TextView
                                android:id="@+id/tvTempScale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginBottom="10dp"
                                android:text="C"
                                android:textColor="@color/white"
                                android:textSize="30sp"
                                app:layout_constraintBottom_toBottomOf="@id/tvTemperature"
                                app:layout_constraintStart_toEndOf="@id/tvTemperature" />


                            <ImageView
                                android:id="@+id/imgDownArrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/ic_arrow_downward_24"
                                app:layout_constraintStart_toStartOf="@id/tvTemperature"
                                app:layout_constraintTop_toBottomOf="@id/tvTemperature"

                                />

                            <TextView
                                android:id="@+id/tvLowTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:layout_constraintStart_toEndOf="@id/imgDownArrow"
                                app:layout_constraintTop_toTopOf="@id/imgDownArrow" />

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:src="@drawable/degree_ring"
                                app:layout_constraintStart_toEndOf="@id/tvLowTemp"
                                app:layout_constraintTop_toTopOf="@id/tvLowTemp"

                                />

                            <ImageView
                                android:id="@+id/imgUpArrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="15dp"
                                android:src="@drawable/ic_arrow_upward_24"
                                app:layout_constraintStart_toEndOf="@id/tvLowTemp"
                                app:layout_constraintTop_toTopOf="@id/imgDownArrow"

                                />

                            <TextView
                                android:id="@+id/tvMaxTemp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                app:layout_constraintStart_toEndOf="@id/imgUpArrow"
                                app:layout_constraintTop_toTopOf="@id/imgDownArrow" />

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:includeFontPadding="false"
                                android:lineSpacingExtra="0dp"
                                android:src="@drawable/degree_ring"
                                app:layout_constraintStart_toEndOf="@id/tvMaxTemp"
                                app:layout_constraintTop_toTopOf="@id/tvMaxTemp"

                                />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/homeHeadingStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hourly Forecast" />

                        <EditText
                            android:id="@+id/tv24Hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:backgroundTint="@color/white"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="7dp"
                            android:text="@string/_72_hours"
                            android:textColor="@color/white"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cardHourly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/home_transparent_bg"
                        android:orientation="vertical">

                        <mtgtech.com.weather_forecast.view.weather_widget.trend.TrendRecyclerView
                            android:id="@+id/container_main_hourly_trend_card_trendRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hourly_trend_item_height"
                            android:layout_marginTop="@dimen/normal_margin"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                    <TextView
                        style="@style/homeHeadingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="@string/today_forecast" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/todayForecastList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:nestedScrollingEnabled="false" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/homeHeadingStyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/daily_forecast" />

                        <EditText
                            android:id="@+id/tv25Days"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:backgroundTint="@color/white"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="7dp"
                            android:text="@string/_15_days"
                            android:textColor="@color/white"
                            android:textSize="14sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/cardDaily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/home_transparent_bg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDailyStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/white" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/dailyForecastList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            tools:itemCount="5"
                            tools:listitem="@layout/item_daily_forecast" />


                    </LinearLayout>


                    <TextView
                        style="@style/homeHeadingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="@string/air_quality" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/aqiCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/home_transparent_bg"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/imgAQI"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/aqi_ring"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvAQI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextWhite"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@id/imgAQI"
                            app:layout_constraintEnd_toEndOf="@id/imgAQI"
                            app:layout_constraintStart_toStartOf="@id/imgAQI"
                            app:layout_constraintTop_toTopOf="@id/imgAQI" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/aqiList"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@id/imgAQI"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imgAQI"
                            app:layout_constraintTop_toTopOf="@id/imgAQI" />

                        <TextView
                            android:id="@+id/tvAQIText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:textColor="@color/colorTextWhite"
                            android:textSize="26sp"
                            app:layout_constraintBottom_toBottomOf="@id/imgAQI"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/imgAQI"
                            app:layout_constraintTop_toTopOf="@id/imgAQI" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:background="@drawable/shape_border"
                        android:backgroundTint="#4D000000"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Weather Radar"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:src="@drawable/ic_line_second" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardWebView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            app:cardCornerRadius="@dimen/_12sdp"
                            tools:ignore="WebViewLayout">

                            <WebView
                                android:id="@+id/radarWebView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvSeeMoreRadar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/see_more"
                            android:textColor="#FFA800"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                    <TextView
                        style="@style/homeHeadingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="@string/wind_pressure" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/home_transparent_bg">


                        <View
                            android:id="@+id/standBarView"
                            android:layout_width="2dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="60dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginBottom="30dp"
                            android:background="@color/colorTextWhite"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <ImageView
                            android:id="@+id/imgWindFan"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_wind"
                            app:layout_constraintBottom_toTopOf="@id/standBarView"
                            app:layout_constraintEnd_toEndOf="@id/standBarView"
                            app:layout_constraintStart_toStartOf="@id/standBarView"
                            app:layout_constraintTop_toTopOf="@id/standBarView"
                            app:tint="@color/colorTextWhite" />


                        <LinearLayout
                            android:id="@+id/windData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/standBarView"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tvWindDirection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/tvWindSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/tvWindGauge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite"

                                android:textSize="17sp" />
                        </LinearLayout>


                        <View
                            android:layout_width="1dp"
                            android:layout_height="60dp"
                            android:layout_marginEnd="40dp"
                            android:background="#80FFFFFF"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/pressureData"
                            app:layout_constraintTop_toTopOf="parent" />


                        <LinearLayout
                            android:id="@+id/pressureData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="30dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="@string/pressure"
                                android:textColor="@color/colorTextWhite"
                                android:textSize="18sp" />


                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/ic_pressure_indicator"
                                app:tint="@color/colorTextWhite" />


                            <TextView
                                android:id="@+id/tvPressureValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTextWhite" />


                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        style="@style/homeHeadingStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:text="@string/sun_moon" />

                    <LinearLayout
                        android:id="@+id/sunMoonCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="60dp"
                        android:background="@drawable/home_transparent_bg"
                        android:orientation="vertical">

                        <mtgtech.com.weather_forecast.view.weather_widget.astro.SunMoonView
                            android:id="@+id/sunMoonView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/mainPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/fr_ad"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/locationContainer" />

            <FrameLayout
                android:id="@+id/fr_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <include
                    layout="@layout/layout_banner_control"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </mtgtech.com.weather_forecast.view.weather_widget.verticalScrollView.VerticalSwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>