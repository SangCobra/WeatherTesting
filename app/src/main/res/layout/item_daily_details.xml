        android:background="@color/colorHomeBg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDailyDetails"
        app:layout_constraintStart_toStartOf="@id/tvDailyDetails"
