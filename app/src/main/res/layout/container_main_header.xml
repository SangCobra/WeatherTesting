<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:foreground="@drawable/selectable_item_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/normal_margin"
    tools:background="@android:color/black"
    tools:ignore="UnusedAttribute"
    tools:layout_height="256dp">

    <com.mtgtech.weather_forecast.view.weather_widget.NumberAnimTextView
        android:id="@+id/container_main_header_tempTxt"
        style="@style/large_title_text"
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:includeFontPadding="false"
        android:textAlignment="viewStart"
        android:textSize="@dimen/main_title_text_size"
        tools:ignore="RelativeOverlap,RtlHardcoded"
        tools:text="30°" />

    <TextView
        android:id="@+id/container_main_header_weatherTxt"
        style="@style/large_title_text"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap,RtlHardcoded"
        tools:text="晴, 体感37°" />

    <TextView
        android:id="@+id/container_main_header_aqiOrWindTxt"
        style="@style/large_title_text"
        android:layout_marginStart="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/content_text_size"
        tools:ignore="RelativeOverlap,RtlHardcoded"
        tools:text="空气质量 轻度污染" />

</LinearLayout>