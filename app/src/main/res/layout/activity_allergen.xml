<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_allergen_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRoot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:theme="@style/WeatherFlowTheme.AppbarTheme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_allergen_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/WeatherFlowTheme.AppbarPopupTheme"
            app:title="@string/allergen" />

    </LinearLayout>

    <com.mtgtech.weather_forecast.view.weather_widget.insets.FitBottomSystemBarRecyclerView
        android:id="@+id/activity_allergen_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"

        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>