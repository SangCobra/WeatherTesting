<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/border_settings_begin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:padding="@dimen/_12sdp">

    <LinearLayout
        android:id="@+id/in_settings_begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_border"
        android:backgroundTint="#3B3B3B"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:background="@drawable/border_radius_half_up"
            android:backgroundTint="#262626"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="336dp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:background="@drawable/shape_border"
            android:backgroundTint="#3B3B3B"
            android:orientation="vertical"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_temperature" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingStart="@dimen/_12sdp"
                    android:text="Temperature"
                    android:textColor="#fff"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="HardcodedText,RtlSymmetry"
                    tools:targetApi="p" />

                <Switch
                    android:id="@+id/switch_to_change_term_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:button="@drawable/switch_button_custom"
                    android:thumb="@null"
                    android:track="@null"
                    tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:src="@drawable/ic_line_second" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_time" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingStart="@dimen/_12sdp"
                    android:text="Time format"
                    android:textColor="#fff"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="HardcodedText,RtlSymmetry"
                    tools:targetApi="p" />

                <Switch
                    android:id="@+id/switch_to_change_time_format"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:button="@drawable/switch_button_time_format"
                    android:thumb="@null"
                    android:track="@null"
                    tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:src="@drawable/ic_line_second" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_46sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_lock" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Lock screen"
                        android:textColor="#fff"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Allow us to display on lock screen"
                        android:textColor="#fff"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>


                <Switch
                    android:id="@+id/set_lock_screen"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:button="@drawable/switch_button_custom_normal"
                    android:thumb="@null"
                    android:track="@null"
                    tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:src="@drawable/ic_line_second" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_notification"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingStart="@dimen/_12sdp"

                    android:text="Notification"
                    android:textColor="#fff"
                    android:textFontWeight="500"
                    android:textSize="@dimen/_14sdp" />

                <Switch
                    android:id="@+id/set_notification"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:button="@drawable/switch_button_custom_normal"
                    android:thumb="@null"
                    android:track="@null"
                    tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:src="@drawable/ic_line_second" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_46sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_tem"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Status bar"
                        android:textColor="#fff"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Allow us to display on Status bar"
                        android:textColor="#fff"
                        android:textFontWeight="500"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/set_status_bar"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:button="@drawable/switch_button_custom_normal"
                    android:thumb="@null"
                    android:track="@null"
                    tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/done_settings_begin"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_14sdp"
            android:background="@drawable/shape_border_button"
            android:backgroundTint="#FFA800"
            android:fontFamily="@font/montserrat_regular"
            android:text="DONE"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>
</FrameLayout>