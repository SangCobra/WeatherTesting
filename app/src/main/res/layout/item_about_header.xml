<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_about_header_appIcon"
        android:layout_width="@dimen/standard_weather_icon_size"
        android:layout_height="@dimen/standard_weather_icon_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/material_icon_size"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_about_header_appName"
        style="@style/large_title_text"
        android:layout_below="@id/item_about_header_appIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/material_icon_size"
        android:text="@string/weather_flow"
        android:textColor="@color/colorTextTitle"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_about_header_appVersion"
        style="@style/title_text"
        android:layout_below="@id/item_about_header_appName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/little_margin"
        android:text="@string/version_code"
        android:textStyle="bold" />

</RelativeLayout>