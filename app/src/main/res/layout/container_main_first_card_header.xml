<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main_first_card_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_item_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/container_main_first_card_header_timeIcon"
            android:layout_width="@dimen/standard_weather_icon_size"
            android:layout_height="@dimen/standard_weather_icon_size"
            android:background="@drawable/selectable_item_background"
            android:padding="@dimen/normal_margin"
            android:src="@drawable/ic_time"
            android:tint="@color/colorTextContent"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/container_main_first_card_header_timeText"
                style="@style/content_text"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry"
                tools:text="09:00" />

            <TextClock
                android:id="@+id/container_main_first_card_header_localTimeText"
                style="@style/subtitle_text"
                tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry"
                tools:text="当地时间 : 4月33日 06:00 星期日" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/container_main_first_card_header_alert"
        style="@style/subtitle_text"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:lineSpacingMultiplier="1.1"
        tools:text="大雾黄色预警, 发布于2018-07-10 02:32" />

    <View
        android:id="@+id/container_main_first_card_header_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/little_margin"
        android:background="@color/colorLine" />

</LinearLayout>