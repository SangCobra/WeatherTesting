<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextWhite"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:id="@+id/tvDayAndDate"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">


        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:layout_marginStart="10dp"
            android:text="@string/day"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/imgDailyDay"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorTextWhite"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/tvDailyDayWeather"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:id="@+id/tvDayTemp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gnt_white50"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:layout_marginStart="10dp"
            android:text="@string/night"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/imgDailyNight"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorTextWhite"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:id="@+id/tvDailyNightWeather"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextWhite"
            android:id="@+id/tvNightTemp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
    </LinearLayout>





</LinearLayout>