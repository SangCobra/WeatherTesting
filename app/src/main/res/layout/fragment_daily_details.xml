<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".view.fragment.DailyDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#262626"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvDailyTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/daytime"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/gnt_white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_border"
            android:backgroundTint="#3B3B3B"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <mtgtech.com.weather_forecast.view.weather_widget.astro.SunMoonView
                    android:id="@+id/daySunMoonView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"

                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@id/daySunMoonView"
                    app:layout_constraintStart_toStartOf="@id/daySunMoonView"
                    app:layout_constraintTop_toBottomOf="@id/daySunMoonView">

                    <TextView
                        android:id="@+id/tvDayStartTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_weight="1"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvDayEndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgDailyIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/weather_cloudy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/llDailyDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgDailyIcon"
                    app:layout_constraintEnd_toStartOf="@id/daySunMoonView"
                    app:layout_constraintTop_toTopOf="parent">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgDownArrowDay"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/ic_arrow_downward_24"
                            app:layout_constraintStart_toStartOf="@id/tvTemperature"
                            app:layout_constraintTop_toBottomOf="@id/tvTemperature"

                            />

                        <TextView
                            android:id="@+id/tvLowTempDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="28"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="@color/gnt_white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@id/imgDownArrow"
                            app:layout_constraintTop_toTopOf="@id/imgDownArrow" />

                        <ImageView
                            android:id="@+id/imgUpArrowDay"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/ic_arrow_upward_24" />

                        <TextView
                            android:id="@+id/tvMaxTempDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="28"
                            android:textColor="@color/gnt_white"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@id/imgUpArrow"
                            app:layout_constraintTop_toTopOf="@id/imgDownArrow" />


                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tvDayDailyStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="@dimen/_4sdp"
                android:maxLines="4"
                android:textColor="@color/gnt_white"
                android:textStyle="italic"
                android:textSize="16sp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcDailyDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_daily_details" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvNightTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/nighttime"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/gnt_white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/shape_border"
            android:backgroundTint="#3B3B3B"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <mtgtech.com.weather_forecast.view.weather_widget.astro.SunMoonView
                    android:id="@+id/nightSunMoonView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"

                    app:layout_constraintEnd_toEndOf="@id/nightSunMoonView"
                    app:layout_constraintStart_toStartOf="@id/nightSunMoonView"
                    app:layout_constraintTop_toBottomOf="@id/nightSunMoonView">

                    <TextView
                        android:id="@+id/tvNightStartTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvNightEndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="@color/colorTextWhite"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgNightIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/weather_cloudy"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/llDailyNightDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/nightSunMoonView"
                    app:layout_constraintStart_toEndOf="@+id/imgNightIcon"
                    app:layout_constraintTop_toTopOf="parent">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgDownArrow"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/ic_arrow_downward_24"
                            app:layout_constraintStart_toStartOf="@id/tvTemperature"
                            app:layout_constraintTop_toBottomOf="@id/tvTemperature"

                            />

                        <TextView
                            android:id="@+id/tvLowTempNight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="28"
                            android:textColor="@color/gnt_white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@id/imgDownArrow"
                            app:layout_constraintTop_toTopOf="@id/imgDownArrow" />

                        <ImageView
                            android:id="@+id/imgUpArrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:src="@drawable/ic_arrow_upward_24" />

                        <TextView
                            android:id="@+id/tvMaxTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="28"
                            android:textColor="@color/gnt_white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@id/imgUpArrow"
                            app:layout_constraintTop_toTopOf="@id/imgDownArrow" />


                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/tvNightDailyStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="italic"
                android:maxLines="4"
                android:textColor="@color/gnt_white"
                android:layout_marginBottom="@dimen/_4sdp"
                android:textSize="16sp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcNightDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                tools:listitem="@layout/item_daily_details" />

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>