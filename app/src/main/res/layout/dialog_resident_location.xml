<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_resident_location_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRoot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/large_title_text"
            android:layout_margin="@dimen/normal_margin"
            android:text="@string/resident_location"
            android:textColor="@color/colorTextTitle" />

        <TextView
            style="@style/content_text"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:text="@string/feedback_resident_location_description" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>