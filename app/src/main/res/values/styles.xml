<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- app theme -->
    <style name="WeatherFlowTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WeatherFlowTheme.Main" parent="WeatherFlowTheme">
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="WeatherFlowTheme.Search" parent="WeatherFlowTheme" />

    <style name="WeatherFlowTheme.AppbarTheme" parent="WeatherFlowTheme">
        <item name="elevation">2dp</item>
    </style>
    <style name="WeatherFlowTheme.AppbarPopupTheme" parent="WeatherFlowTheme" >

        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="WeatherFlowTheme.AppbarTheme.Light" parent="WeatherFlowTheme">
        <item name="elevation">2dp</item>
    </style>
    <style name="WeatherFlowTheme.AppbarPopupTheme.Light" parent="WeatherFlowTheme" />

    <style name="WeatherFlowTheme.AppbarTheme.Dark" parent="WeatherFlowTheme">
        <item name="elevation">2dp</item>
    </style>
    <style name="WeatherFlowTheme.AppbarPopupTheme.Dark" parent="WeatherFlowTheme" />

    <style name="WeatherFlowTheme.TabLayoutTheme" parent="WeatherFlowTheme">
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/colorTextTitle</item>
        <item name="tabSelectedTextColor">@color/colorTextTitle</item>
        <item name="tabTextColor">@color/colorTextSubtitle</item>
    </style>

    <!-- card. -->
    <style name="material_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">@dimen/little_margin</item>
        <item name="android:layout_marginRight">@dimen/little_margin</item>
        <item name="android:layout_marginBottom">@dimen/little_margin</item>
        <item name="android:clickable">true</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/colorRoot</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/touch_raise</item>
        <item name="android:foreground">@drawable/selectable_item_background</item>
    </style>

    <style name="widget_background_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/widget_card_light_100</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Popup window. -->
    <style name="PopupWindowAnimation.Top.Left" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_top_left</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="PopupWindowAnimation.Top.Right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_top_right</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="PopupWindowAnimation.Bottom.Left" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_bottom_left</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="PopupWindowAnimation.Bottom.Right" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_show_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <!-- view. -->
    <style name="week_weather_week_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">@drawable/selectable_item_background</item>
    </style>

    <!-- image. -->
    <style name="material_icon">
        <item name="android:layout_width">@dimen/material_icon_size</item>
        <item name="android:layout_height">@dimen/material_icon_size</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginLeft">@dimen/normal_margin</item>
        <item name="android:layout_marginRight">@dimen/normal_margin</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
        <item name="android:tint">@color/colorTextContent</item>
    </style>

    <style name="widget_week_icon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:src">@drawable/weather_cloudy</item>
    </style>

    <!-- text. -->
    <style name="large_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="content_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/colorTextContent</item>
    </style>

    <style name="subtitle_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/colorTextSubtitle</item>
    </style>

    <style name="notification_large_title_text" parent="@style/TextAppearance.Compat.Notification.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_title_text_size</item>
    </style>

    <style name="notification_title_text" parent="@style/TextAppearance.Compat.Notification.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="notification_content_text" parent="@style/TextAppearance.Compat.Notification.Info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="notification_subtitle_text" parent="@style/TextAppearance.Compat.Notification.Info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <!-- spinner -->
    <style name="spinner_item" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/colorTextContent</item>
    </style>

    <!-- switch -->
    <style name="my_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

    <!-- button -->
    <style name="material_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="activity_create_widget_done_button" parent="material_button">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:text">@string/done</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="material_image_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">@dimen/little_margin</item>
        <item name="android:layout_margin">@dimen/little_margin</item>
        <item name="android:background">@drawable/selectable_item_background_borderless</item>
        <item name="android:tint">@color/colorTextContent</item>
    </style>

    <!-- clock -->
    <style name="widget_text_clock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:format24Hour">HH:mm</item>
        <item name="android:format12Hour">h:mm</item>
        <item name="android:textSize">@dimen/widget_current_weather_icon_size</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:shadowColor">@color/colorTextDark2nd</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="widget_text_clock_aa">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:format24Hour">\t</item>
        <item name="android:format12Hour">aa</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/widget_aa_text_size</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:shadowColor">@color/colorTextDark2nd</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="widget_text_clock_analog">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:hand_hour">@drawable/clock_hour_light</item>
        <item name="android:hand_minute">@drawable/clock_minute_light</item>
        <item name="android:dial">@drawable/clock_dial_light</item>
    </style>
    <style name="widget_text_clock_analog.Light" parent="widget_text_clock_analog" />
    <style name="widget_text_clock_analog.Dark" parent="widget_text_clock_analog">
        <item name="android:hand_hour">@drawable/clock_hour_dark</item>
        <item name="android:hand_minute">@drawable/clock_minute_dark</item>
        <item name="android:dial">@drawable/clock_dial_dark</item>
    </style>

    <!-- progress bar. -->
    <style name="widget_progress">
        <item name="android:layout_width">@dimen/widget_little_weather_icon_size</item>
        <item name="android:layout_height">@dimen/widget_little_weather_icon_size</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTintMode" tools:ignore="NewApi">src_atop</item>
        <item name="android:indeterminateTint" tools:ignore="NewApi">@color/lightPrimary_5</item>
    </style>

    <style name="Toolbar.TitleText" parent="WeatherFlowTheme.AppbarTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homeHeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tvTodayForecastStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tvNavBarStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/white</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="navBarDividerStyle">
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="dottedDividerStyle">
        <item name="android:background">@drawable/view_line_dotted</item>
    </style>

    <style name="tvSettingsHeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

    <style name="tvSettingsTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/colorTextWhite</item>
        <item name="android:drawablePadding">10dp</item>

    </style>
    <style name="etSettingUnitTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSkyBlue</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/colorSkyBlue</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="settingsSubMenuStyle">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>

    </style>
    <style name="Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:screenOrientation">unspecified</item>
    </style>

</resources>
